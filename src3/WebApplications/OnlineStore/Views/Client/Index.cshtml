@model List<ClientModel>

@{
    ViewData["Title"] = "Список клиентов";

}
<div>
    @if (Model.Count > 0)
    {
        <h3>Список клиентов:</h3>
        <table>
            <tr>
                <td>Имя </td>
                <td>Телефон </td>
                <td>Адрес </td>
            </tr>
            @foreach (var client in Model)
            {
                <tr>
                    <td> @client.Name </td>
                    <td> @client.ContactPhone </td>
                    <td> @client.Address </td>
                    <td>
                        <a class="nav-link text-dark" asp-area="" asp-controller="Client" asp-action="Update" asp-route-id="@client.Id">Редактировать</a>
                    </td>
                    <td>
                        <a class="nav-link text-dark" asp-area="" asp-controller="Client" asp-action="Delete" asp-route-id="@client.Id">Удалить</a>
                    </td>
                </tr>
            }
        </table>
    }
    else
    {
        <td>Клиенты отсутствуют</td>
    }
    <a class="nav-link text-dark" asp-area="" asp-controller="Client" asp-action="Create">Добавить клиента</a>

</div>