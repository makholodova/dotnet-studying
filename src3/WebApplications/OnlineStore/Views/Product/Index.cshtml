@using OnlineStore.DataBase
@model List<ProductModel>

@{
    ViewData["Title"] = "Список товаров";
}

<div>
    @if (Model.Count > 0)
    {
        <h3>Список товаров:</h3>
        <table>
            <tr>
                <td>Имя </td>
                <td>Количество </td>
                <td>Производитель </td>
                <td>Наличие </td>
                <td>Цена </td>
            </tr>

            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Name </td>
                    <td>@product.Cost </td>
                    <td>@product.Company </td>
                    <td>@product.InStock </td>
                    <td>@product.Cost </td>
                </tr>
                <td>
                    <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="Update" asp-route-id="@product.Id">Редактировать</a>
                </td>
                <td>
                    <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="Delete" asp-route-id="@product.Id">Удалить</a>
                </td>
            }
        </table>
    }
    else
    {
        <td>Товар отсутствуют</td>
    }
    <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="Create">Добавить товар</a>

</div>